        <Image Height="390" Width="66" Source="images/pipeBottom.png" Tag="obs2" Canvas.Left="52" Canvas.Top="237"/>
        <Image Height="390" Width="66" Source="images/pipeTop.png" Tag="obs2" Canvas.Left="52" Canvas.Top="-289"/>

        <Image Height="390" Width="66" Source="images/pipeBottom.png" Tag="obs3" Canvas.Left="404" Canvas.Top="300"/>
